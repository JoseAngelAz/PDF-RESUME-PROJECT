<div class="row">    
    {{#each cv}}
    <div class="col-md-3">
        <div class="card shadow p-3">
            <div class="card-body">
                <h4 class="card-title text-primary d-flex justify-content-between align-items-center">
                    {{nombre}} <a href="resumes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                </h4>
                <div class="card-body">
                    <p class="text-info bg-secondary rounded">{{email}}</p>
                </div>
                <div class="card-body text-secondary rounded">
                    <p class="text-warning text-justify">{{date}}</p>    
                </div>            
            </div>
            <div class="card-footer text-primary rounded">
                {{_id}}
            </div>
            <form action="/resumes/delete/{{_id}}?_method=DELETE" method="POST">
            <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn btn-danger btn-block btn-sm">
                Borrar
            </button>
            </form>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <h1>Hola {{user.nombre}}</h1>
            <p class="lead">No hay CVs a√∫n!</p>
            <a href="/resumes/add" class="btn btn-success btn-block">Crea tu CV ahora!</a>
        </div>
    </div>
    {{/each}}
</div>