<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar Cv</h3>
        </div>
        <div class="card-body">
            <form action="/resumes/edit-resume/{{cv._id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
                <!--Nombre -->
                <div class="form-group">
                    <input  type="text" name="_method "value="{{cv.nombre}}" class="form-control" placeholder="Nombre" autofocus>
                </div>
                <!--Edad -->
                <div class="form-group">
                    <input  type="text" name="edad" value="{{cv.edad}}" class="form-control" placeholder="Edad" autofocus>
                </div>
                <!--Direccion -->
                <div class="form-group">
                    <textarea  class="form-control" name="direccion"  placeholder="Dirección">
                        {{cv.direccion}}
                    </textarea>
                </div>
                <!--Telefono -->
                <div class="form-group">
                    <input  type="number" name="telefono" value="{{cv.telefono}}" class="form-control" placeholder="Telefono" autofocus>
                </div>
                <!--Celular -->
                <div class="form-group">
                    <input  type="number" name="celular" value="{{cv.celular}}" class="form-control" placeholder="Celular" autofocus>
                </div>
                <!--Email -->
                <div class="form-group">
                    <input  type="text" name="email" value="{{cv.email}}" class="form-control" placeholder="Email" autofocus>
                </div>
                <!--DUI -->
                <div class="form-group">
                    <input  type="text" name="dui" value="{{cv.dui}}" class="form-control" placeholder="DUI" autofocus>
                </div>
                <!--NIT -->
                <div class="form-group">
                    <input  type="text" name="nit" value="{{cv.nit}}" class="form-control" placeholder="NIT" autofocus>
                </div>
                <!--Licencia -->
                <div class="form-group">
                    <input  type="text" name="licencia" value="{{cv.licencia}}" class="form-control" placeholder="Licencia" autofocus>
                </div>
                <!--Nivel Academy -->
                <div class="form-group">
                    <input  type="text" name="nivel_acadmy" value="{{cv.nivel_acadmy}}" class="form-control" placeholder="Nivel Académico" autofocus>
                </div>
                 <!--Lugar Academy -->
                <div class="form-group">
                    <textarea  class="form-control" name="lugar_acadmy"  placeholder="Lugar donde estudió">
                        {{cv.lugar_acadmy}}
                    </textarea>
                </div>
                 <!--Formacion Técnica -->
                <div class="form-group">
                    <textarea  class="form-control" name="info_tec"  placeholder="Formación Técnica">
                        {{cv.info_tec}}
                    </textarea>
                </div>
                 <!--Otros Estudios -->
                <div class="form-group">
                    <textarea  class="form-control" name="otros_estudios" placeholder="Otros Estudios">
                        {{cv.otros_estudios}}
                    </textarea>
                </div>
                 <!--Exp Laboral -->
                <div class="form-group">
                    <textarea  class="form-control" name="exp_laboral"  placeholder="Exp Laboral">
                        {{cv.exp_laboral}}
                    </textarea>
                </div>
                 <!--Conocimientos -->
                <div class="form-group">
                    <textarea  class="form-control" name="conocimientos" placeholder="Conocimientos">
                        {{cv.conocimientos}}
                    </textarea>
                </div>
                 <!--Skills -->
                <div class="form-group">
                    <textarea  class="form-control" name="skills"  placeholder="Habilidades">
                        {{cv.skills}}
                    </textarea>
                </div>
                <!--Nombre Ref Uno -->
                <div class="form-group">
                    <input  type="text" name="nombre_ref_uno" value="{{cv.nombre_ref_uno}}" class="form-control" placeholder="Ref Personal Uno" autofocus>
                </div>
                <!--Numero Ref Uno -->
                <div class="form-group">
                    <input  type="number" name="numero_ref_uno" value="{{cv.numero_ref_uno}}" class="form-control" placeholder="Númeor Ref Uno" autofocus>
                </div>
                <!--Nombre Ref Dos -->
                <div class="form-group">
                    <input  type="text" name="nombre_ref_dos" value="{{cv.nombre_ref_dos}}" class="form-control" placeholder="Ref Personal Dos" autofocus>
                </div>
                <!--Numero Ref Dos -->
                <div class="form-group">
                    <input  type="number" name="numero_ref_dos" value="{{cv.numero_ref_dos}}" class="form-control" placeholder="Númeor Ref Dos" autofocus>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">
                        GUARDAR CV
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>